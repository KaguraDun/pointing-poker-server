{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "project": ["./tsconfig.json"],
    "warnOnUnsupportedTypeScriptVersion": false
  },

  "ignorePatterns": [
    "dist",
    "node_modules"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb-typescript",
    "plugin:jest/recommended",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": [
    "@typescript-eslint",
    "simple-import-sort",
    "jest",
    "prettier"
  ]
}